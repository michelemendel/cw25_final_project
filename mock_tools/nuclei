#!/bin/bash
outfile=""
while [[ "$#" -gt 0 ]]; do
    case $1 in
        -o) outfile="$2"; shift ;;
        *) ;;
    esac
    shift
done

if [[ -n "$outfile" ]]; then
    # Generate a dummy finding. We need a timestamp or unique ID? No, just valid JSON.
    echo '{"template-id":"mock-template", "info":{"name":"Mock Vulnerability", "severity":"high"}, "matched-at":"https://example.com/mock", "snippet":"Found mock vulnerability"}' > "$outfile"
fi
